<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/base_color"
    tools:context=".retailerkyc.FinishFragment">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="IDFC Door Step Banking KYC"
        android:textColor="?demoColor"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_gravity="center"
        />

    <LinearLayout
        android:id="@+id/verificationLy"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_gravity="center"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="25dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:weightSum="5"
        app:layout_constraintTop_toBottomOf="@+id/textView">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            >

            <LinearLayout
                android:layout_width="46dp"
                android:layout_height="46dp"
                android:padding="3dp"
                android:background="@drawable/card_gradient">
                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/card"
                    android:background="@drawable/card_inside_gradient"
                    android:padding="@dimen/_8dp"
                    android:layout_gravity="center"
                    />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:text="@string/aadhar_nverification"
                android:fontFamily="@font/montserrat_regular"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="@dimen/_7sp" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginBottom="10dp"
            android:layout_weight="1"
            android:background="@color/black" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:weightSum="1">

            <LinearLayout
                android:layout_width="46dp"
                android:layout_height="46dp"
                android:padding="3dp"
                android:background="@drawable/card_gradient">
                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/camera"
                    android:background="@drawable/card_inside_gradient"
                    android:padding="@dimen/_8dp"
                    android:layout_gravity="center"
                    />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:text="@string/upload_nselfie"
                android:fontFamily="@font/montserrat_regular"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="@dimen/_7sp" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginBottom="10dp"
            android:layout_weight="1"
            android:background="@color/black" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:weightSum="1">

            <LinearLayout
                android:layout_width="46dp"
                android:layout_height="46dp"
                android:padding="3dp"
                android:background="@drawable/card_gradient">
                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/baseline_cloud_upload_24"
                    android:background="@drawable/card_inside_gradient"
                    android:padding="@dimen/_8dp"
                    android:layout_gravity="center"
                    android:tint="@color/black"/>
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:text="@string/upload_ndocument"
                android:fontFamily="@font/montserrat_regular"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="@dimen/_7sp" />


        </LinearLayout>


    </LinearLayout>

   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:background="@drawable/card_gradient"
       android:layout_marginHorizontal="10dp"
       android:layout_marginTop="20dp"
       android:padding="5dp">
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:background="@drawable/card_inside_gradient"
           android:orientation="horizontal">
          <androidx.cardview.widget.CardView
              android:layout_width="60dp"
              android:layout_height="60dp"
              android:layout_margin="10dp"
              app:cardCornerRadius="50dp"
              android:elevation="5dp">
              <ImageView
                  android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:src="@drawable/aadhar"
                  android:scaleType="fitXY"/>
          </androidx.cardview.widget.CardView>
           <TextView

               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="Aadhar Verification"
               android:fontFamily="@font/montserrat_semibold"
               android:layout_gravity="center_vertical"
               android:textColor="?demoColor"
               />
           <ImageView
               android:layout_width="40dp"
               android:layout_height="40dp"
               android:src="@drawable/check"
               android:layout_gravity="center_vertical"
               android:padding="8dp"
               app:tint="@color/green"/>
       </LinearLayout>
   </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/card_gradient"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="10dp"
        android:padding="5dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/card_inside_gradient"
            android:orientation="horizontal">
            <androidx.cardview.widget.CardView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_margin="10dp"
                app:cardCornerRadius="50dp"
                android:elevation="5dp">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/take_selfie"
                    android:scaleType="fitXY"/>
            </androidx.cardview.widget.CardView>
            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Selfie Upload"
                android:fontFamily="@font/montserrat_semibold"
                android:layout_gravity="center_vertical"
                android:textColor="?demoColor"
                />
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/check"
                android:layout_gravity="center_vertical"
                android:padding="8dp"
                app:tint="@color/green"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/card_gradient"
        android:layout_margin="10dp"
        android:padding="5dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/card_inside_gradient"
            android:orientation="horizontal">
            <androidx.cardview.widget.CardView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_margin="10dp"
                app:cardCornerRadius="50dp"
                android:elevation="5dp">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/documnet"
                    android:scaleType="fitXY"/>
            </androidx.cardview.widget.CardView>
            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Document Uplaod"
                android:fontFamily="@font/montserrat_semibold"
                android:layout_gravity="center_vertical"
                android:textColor="?demoColor"
                />
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/check"
                android:layout_gravity="center_vertical"
                android:padding="8dp"
                app:tint="@color/green"/>
        </LinearLayout>
    </LinearLayout>

    <TextView

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/application_submitted"
        android:textSize="13sp"
        android:layout_gravity="center"
        android:gravity="center"
        android:textColor="@color/black"
        android:fontFamily="@font/montserrat_regular"
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="10dp"/>

    <TextView
        android:id="@+id/tvFinish"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Go to Home"
        android:background="@drawable/button_on_dec"
        android:layout_gravity="center"
        android:gravity="center"
        android:textColor="@color/white"
        android:fontFamily="@font/montserrat_semibold"
        android:layout_marginTop="50dp"/>

</LinearLayout>