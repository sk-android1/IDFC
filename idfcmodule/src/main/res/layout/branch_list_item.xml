<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="@dimen/_5dp"
    android:layout_marginTop="@dimen/_5dp"
    android:background="@drawable/rounded_light_blue_back"
    android:paddingHorizontal="@dimen/_10dp"
    android:paddingVertical="@dimen/_10dp">

    <ImageView
        android:id="@+id/imgBank"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/bank"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_10dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toStartOf="@+id/tvSelect"
        app:layout_constraintStart_toEndOf="@+id/imgBank"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/tvBranchName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat_semibold"
            android:text="Kirti Nagar Branch"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/tvBranchCode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="IDFB0020195"
            android:textSize="13sp"
            android:textColor="@color/black"/>

        <TextView
            android:id="@+id/tvBranchAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Charak Sadan 12/5 Charak Sadan 12/5 D.R road near Oxford School, ...."
            android:textSize="11sp"
            android:textColor="@color/black"/>
    </LinearLayout>

    <TextView
        android:id="@+id/tvSelect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_blue_back2"
        android:gravity="center_vertical"
        android:paddingHorizontal="@dimen/_20dp"
        android:paddingVertical="5dp"
        android:text="Select"
        android:textColor="@color/white"
        android:textSize="@dimen/_12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>