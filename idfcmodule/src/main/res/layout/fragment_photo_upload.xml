<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/mainLy"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        tools:context=".retailerkyc.PhotoUploadFragment">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="IDFC Door Step Banking KYC"
            android:textColor="?demoColor"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:id="@+id/verificationLy"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_gravity="center"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="25dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:weightSum="5"
            app:layout_constraintTop_toBottomOf="@+id/textView">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                >

                <LinearLayout
                    android:layout_width="46dp"
                    android:layout_height="46dp"
                    android:padding="3dp"
                    android:background="@drawable/card_gradient">
                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/check"
                        android:background="@drawable/card_inside_gradient"
                        android:padding="@dimen/_8dp"
                        android:layout_gravity="center"
                        app:tint="@color/green"/>
                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:gravity="center"
                    android:text="@string/aadhar_nverification"
                    android:fontFamily="@font/montserrat_regular"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_7sp" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginBottom="10dp"
                android:layout_weight="1"
                android:background="@color/green" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                android:weightSum="1">

                <LinearLayout
                    android:layout_width="46dp"
                    android:layout_height="46dp"
                    android:padding="3dp"
                    android:background="@drawable/card_gradient">
                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/camera"
                        android:background="@drawable/card_inside_gradient"
                        android:padding="@dimen/_8dp"
                        android:layout_gravity="center"
                        app:tint="@color/yellow"/>
                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:gravity="center"
                    android:text="@string/upload_nselfie"
                    android:fontFamily="@font/montserrat_regular"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_7sp" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginBottom="10dp"
                android:layout_weight="1"
                android:background="@color/grey" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                android:weightSum="1">

                <LinearLayout
                    android:layout_width="46dp"
                    android:layout_height="46dp"
                    android:padding="3dp"
                    android:background="@drawable/card_gradient">
                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/baseline_cloud_upload_24"
                        android:background="@drawable/card_inside_gradient"
                        android:padding="@dimen/_8dp"
                        android:layout_gravity="center"/>
                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:gravity="center"
                    android:text="@string/upload_ndocument"
                    android:fontFamily="@font/montserrat_regular"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_7sp" />


            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@+id/verificationLy"

            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginHorizontal="5dp"
            android:padding="5dp"
            android:clipToPadding="false"
            android:background="@drawable/card_gradient"
            >
            <LinearLayout
                android:id="@+id/replaceLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/card_inside_gradient"
                android:orientation="vertical"
                >
                <TextView
                    android:id="@+id/textSelfie"
                    android:layout_marginTop="@dimen/_20dp"
                    android:text="Upload Selfie"
                    android:textColor="?demoColor"
                    android:textSize="@dimen/_16sp"
                    android:fontFamily="@font/montserrat_semibold"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    />

               <androidx.constraintlayout.widget.ConstraintLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content">
                   <androidx.cardview.widget.CardView
                       android:id="@+id/imgCard"
                       android:layout_width="150dp"
                       android:layout_height="150dp"
                       android:layout_gravity="center"
                       app:cardCornerRadius="100dp"
                       android:layout_marginVertical="10dp"
                       app:layout_constraintStart_toStartOf="parent"
                       app:layout_constraintEnd_toEndOf="parent"
                       app:layout_constraintTop_toTopOf="parent">
                       <ImageView
                           android:id="@+id/img_agent"
                           android:src="@drawable/take_selfie"
                           android:layout_width="match_parent"
                           android:layout_height="match_parent"
                           android:scaleType="fitXY"/>
                   </androidx.cardview.widget.CardView>
                   <ImageView
                       android:id="@+id/imgCamera"
                       android:layout_width="40dp"
                       android:layout_height="40dp"
                       android:src="@drawable/camera"
                       app:layout_constraintTop_toTopOf="parent"
                       app:layout_constraintBottom_toBottomOf="parent"
                       app:layout_constraintStart_toEndOf="@id/imgCard"
                       app:layout_constraintEnd_toEndOf="@+id/imgCard"
                       android:elevation="20dp"
                       app:tint="@color/sky_blue"
                       android:visibility="gone"
                       tools:visibility="visible"/>
               </androidx.constraintlayout.widget.ConstraintLayout>

                <TextView
                    android:id="@+id/textGl"
                    android:textColor="?demoColor"
                    android:layout_marginTop="@dimen/_10dp"
                    android:layout_marginHorizontal="@dimen/_20dp"
                    android:fontFamily="@font/montserrat_medium"
                    android:text="Good Lighting"
                    android:textSize="16sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@+id/img_agent"/>

                <TextView
                    android:textColor="@color/dark_grey"
                    android:layout_marginHorizontal="@dimen/_20dp"
                    android:fontFamily="@font/montserrat_medium"
                    android:text="Make sure you are in a well light area and both ears are uncovered"
                    android:textSize="12sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@+id/textGl"/>

                <TextView
                    android:id="@+id/textLs"
                    android:textColor="?demoColor"
                    android:layout_marginTop="@dimen/_10dp"
                    android:layout_marginHorizontal="@dimen/_20dp"
                    android:fontFamily="@font/montserrat_medium"
                    android:text="Look straight"
                    android:textSize="16sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@+id/textSure"/>

                <TextView

                    android:textColor="@color/dark_grey"
                    android:layout_marginHorizontal="@dimen/_20dp"
                    android:fontFamily="@font/montserrat_medium"
                    android:text="Hold your phone at eye level and look straight to the camera"
                    android:textSize="12sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@+id/textLs"/>

                <TextView
                    android:layout_weight="1"
                    android:id="@+id/tvOpenCam"
                    android:layout_marginTop="@dimen/_40dp"
                    android:layout_marginHorizontal="@dimen/_20dp"
                    android:gravity="center"
                    android:fontFamily="@font/montserrat_semibold"
                    android:text="Open Camera"
                    android:background="@drawable/button_on_dec"
                    android:textColor="@color/white"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginBottom="20dp"/>

                <TextView
                    android:layout_weight="1"
                    android:id="@+id/tv_next"
                    android:layout_marginTop="@dimen/_30dp"
                    android:layout_marginHorizontal="@dimen/_20dp"
                    android:gravity="center"
                    android:fontFamily="@font/montserrat_semibold"
                    android:text="Next"
                    android:background="@drawable/button_on_dec"
                    android:textColor="@color/white"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginBottom="20dp"
                    android:visibility="gone"
                    tools:visibility="visible"/>
            </LinearLayout>
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>

