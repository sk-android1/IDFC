<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/lead_main_bg"
    tools:context=".lead.CloseSRFragment">

    <ImageView
        android:id="@+id/imgLogo"
        android:layout_width="180dp"
        android:layout_height="80dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:src="@drawable/logo1_screen"
        android:layout_marginTop="@dimen/_10dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:paddingVertical="@dimen/_45dp"
        android:paddingHorizontal="@dimen/_40dp"
        android:background="@drawable/rounded_back"
        android:elevation="@dimen/_5dp"
        android:layout_marginHorizontal="@dimen/_20dp">
        <ImageView
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:src="@drawable/success_idfc"
            android:layout_gravity="center_horizontal"/>
        <TextView

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="The SR get successfully closed"
            android:textSize="22sp"
            android:textColor="@color/black"
            android:fontFamily="@font/montserrat_semibold"
            android:gravity="center"
            android:layout_marginTop="@dimen/_30dp"
            />

        <TextView
            android:id="@+id/tvHome"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Back to Home"
            android:textColor="@color/white"
            android:fontFamily="@font/montserrat_semibold"
            android:background="@drawable/rounded_green_back"
            android:gravity="center"
            android:padding="@dimen/_10dp"
            android:layout_marginTop="@dimen/_30dp"
            android:elevation="10dp"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>