<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/rounded_back"
    android:paddingHorizontal="@dimen/_15dp"
    android:paddingVertical="@dimen/_30dp"
    android:layout_margin="@dimen/_5dp"
    android:elevation="@dimen/_5dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/textHeading"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Are you sure to proceed to the journey"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:fontFamily="@font/montserrat_semibold"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="parent"
        />
    <TextView
        android:id="@+id/textMessage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Are you sure that you want to CloseSR "
        android:textSize="13sp"
        android:fontFamily="@font/montserrat_regular"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@+id/textHeading"
        android:visibility="visible"
        tools:visibility="visible"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/textMessage"
        android:orientation="horizontal"
        android:layout_marginHorizontal="@dimen/_20dp"
        android:layout_marginTop="@dimen/_30dp">
        <TextView
            android:id="@+id/tvYes"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Yes"
            android:textColor="@color/white"
            android:fontFamily="@font/montserrat_semibold"
            android:background="@drawable/rounded_green_back"
            android:gravity="center"
            android:padding="@dimen/_10dp"
            android:layout_marginEnd="@dimen/_10dp"/>
        <TextView
            android:id="@+id/tvCancel"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="No"
            android:textColor="@color/white"
            android:fontFamily="@font/montserrat_semibold"
            android:background="@drawable/rounded_red2"
            android:gravity="center"
            android:padding="@dimen/_10dp"
            android:layout_marginStart="@dimen/_10dp"/>
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>