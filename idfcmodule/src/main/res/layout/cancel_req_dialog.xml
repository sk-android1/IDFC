<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/rounded_back"
    android:paddingHorizontal="0dp"
    android:paddingVertical="@dimen/_30dp"
    android:layout_margin="@dimen/_5dp"
    android:elevation="@dimen/_5dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/textHeading"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Are you sure to cancel the request"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:fontFamily="@font/montserrat_semibold"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="parent"
        />

    <LinearLayout
        android:id="@+id/selectRemarkLy"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/textHeading"
        android:layout_marginTop="20dp"
        android:orientation="vertical">
        <TextView
            android:id="@+id/textSelect"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Select Remark"
            android:textSize="15sp"
            android:textColor="@color/black"
            android:fontFamily="@font/montserrat_regular"
            android:layout_marginLeft="15dp"
            android:gravity="start"
            />
        <LinearLayout
            android:id="@+id/selectLy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/border_edit2"
            app:layout_constraintTop_toBottomOf="@+id/textRemark"
            android:layout_marginTop="@dimen/_5dp"
            android:orientation="horizontal"
            android:layout_marginHorizontal="@dimen/_10dp"

            >
            <AutoCompleteTextView
                android:layout_weight="1"
                android:id="@+id/auto_remark"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@android:color/transparent"
                android:drawablePadding="5dp"
                android:gravity="start"
                android:hint="Select Remark"
                android:padding="10dp"
                android:singleLine="false"
                android:textColor="@color/black"
                android:textColorHint="@color/grey"
                android:textSize="@dimen/_16sp"
                android:fontFamily="@font/montserrat_regular"
                android:focusable="false"/>

            <ImageView

                android:layout_width="40dp"
                android:layout_height="50dp"
                android:src="@drawable/dropdown"
                android:padding="9dp"
                android:visibility="visible"
                tools:visibility="visible"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/otherRemarkLy"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/selectRemarkLy"
        android:layout_marginTop="20dp"
        android:orientation="vertical"
        android:visibility="gone"
        tools:visibility="visible">
        <TextView
            android:id="@+id/textRemark"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Remark"
            android:textSize="15sp"
            android:textColor="@color/black"
            android:fontFamily="@font/montserrat_regular"
            android:layout_marginLeft="15dp"
            android:gravity="start"
            />
        <LinearLayout
            android:id="@+id/remarkLy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/border_edit2"
            app:layout_constraintTop_toBottomOf="@+id/textRemark"
            android:layout_marginTop="@dimen/_5dp"
            android:orientation="horizontal"
            android:layout_marginHorizontal="@dimen/_10dp"

            >
            <EditText
                android:layout_weight="1"
                android:id="@+id/et_remark"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@android:color/transparent"
                android:drawablePadding="5dp"
                android:gravity="start"
                android:hint="Enter Remark"
                android:padding="10dp"
                android:singleLine="true"
                android:textColor="@color/black"
                android:textColorHint="@color/grey"
                android:textSize="@dimen/_16sp"
                android:fontFamily="@font/montserrat_regular"
                />

            <ImageView
                android:id="@+id/imgClear"
                android:layout_width="40dp"
                android:layout_height="50dp"
                android:src="@drawable/close"
                android:padding="5dp"
                android:visibility="gone"
                tools:visibility="visible"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/otherRemarkLy"
        android:orientation="horizontal"
        android:layout_marginHorizontal="@dimen/_20dp"
        android:layout_marginTop="@dimen/_30dp">
        <TextView
            android:id="@+id/tvYes"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Yes"
            android:textColor="@color/white"
            android:fontFamily="@font/montserrat_semibold"
            android:background="@drawable/rounded_green_back"
            android:gravity="center"
            android:padding="@dimen/_10dp"
            android:layout_marginEnd="@dimen/_10dp"/>
        <TextView
            android:id="@+id/tvCancel"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="No"
            android:textColor="@color/white"
            android:fontFamily="@font/montserrat_semibold"
            android:background="@drawable/rounded_red2"
            android:gravity="center"
            android:padding="@dimen/_10dp"
            android:layout_marginStart="@dimen/_10dp"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>