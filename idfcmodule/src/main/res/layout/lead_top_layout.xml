<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <ImageView
        android:id="@+id/imgBack"
        android:layout_width="@dimen/_30dp"
        android:layout_height="@dimen/_30dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:src="@drawable/back_ios"
        android:background="@drawable/rounded_back"
        android:layout_margin="20dp"
        android:padding="10dp"
        android:elevation="5dp"
        />

    <ImageView
        android:id="@+id/imgLogo"
        android:layout_width="130dp"
        android:layout_height="60dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:src="@drawable/logo1_screen"

        />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="@dimen/_40dp"
        android:layout_height="@dimen/_40dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="15dp"
        android:background="@drawable/rounded_back"
        android:elevation="5dp"
        android:visibility="invisible"
        tools:visibility="visible">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:src="@drawable/notificationbell"
            android:padding="9dp"
            />

        <TextView
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:text="9+"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:background="@drawable/rounded_red"
            android:layout_margin="5dp"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="8sp"
            android:fontFamily="@font/montserrat_medium"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:id="@+id/custReqLy"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/imgLogo">

        <ImageView
            android:layout_width="@dimen/_40dp"
            android:layout_height="@dimen/_40dp"
            android:src="@drawable/user_menu"
            android:background="@drawable/rounded_back"
            android:layout_marginStart="20dp"
            android:padding="9dp"
            android:elevation="5dp"
            android:layout_marginVertical="5dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Customer Service Request"
            android:layout_gravity="center_vertical"
            android:textSize="16sp"
            android:textColor="@color/alpha_black"
            android:fontFamily="@font/montserrat_medium"
            android:layout_marginStart="10dp"
            android:letterSpacing="0.01"
            android:layout_marginTop="3dp"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>