<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".retailerkyc.ApplicationApprovedFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:background="@color/base_color"
        >

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="@string/idfc_door_step_banking_kyc"
            android:textColor="?demoColor"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/imgRefresh"
            android:layout_width="30dp"
            android:layout_height="30dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:src="@drawable/baseline_refresh_24"
            android:layout_margin="10dp"
            android:visibility="gone"
            tools:visibility="visible"/>

        <WebView
            android:id="@+id/webView"
            android:layout_width="match_parent"
            android:layout_height="450dp"
            android:padding="5dp"
            app:layout_constraintTop_toBottomOf="@+id/textView"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:scrollbars="none"
            android:visibility="gone"
            tools:visibility="visible"/>

       <ImageView
           android:id="@+id/imgVerified"
           android:layout_width="120dp"
           android:layout_height="120dp"
           android:src="@drawable/verified"
           app:layout_constraintTop_toBottomOf="@+id/textView"
           app:layout_constraintStart_toStartOf="parent"
           app:layout_constraintEnd_toEndOf="parent"
           android:layout_marginTop="50dp"
           app:tint="?demoColor"/>

        <!--    <LinearLayout-->
        <!--        android:id="@+id/approvedLy"-->
        <!--        android:layout_width="match_parent"-->
        <!--        android:layout_height="250dp"-->
        <!--        app:layout_constraintTop_toBottomOf="@+id/textView"-->
        <!--        app:layout_constraintStart_toStartOf="parent"-->
        <!--        app:layout_constraintEnd_toEndOf="parent"-->
        <!--        android:layout_marginTop="30dp"-->
        <!--        android:background="@drawable/card_gradient"-->
        <!--        android:padding="5dp">-->
        <!--        <WebView-->
        <!--            android:id="@+id/webView"-->
        <!--            android:layout_width="match_parent"-->
        <!--            android:layout_height="match_parent"-->
        <!--            android:padding="5dp"/>-->
        <!--    </LinearLayout>-->

        <TextView
            android:id="@+id/tvApproved"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginHorizontal="5dp"
            android:text="Your application has approved"
            android:fontFamily="@font/montserrat_regular"
            android:textColor="@color/black"
            android:gravity="center"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imgVerified" />

        <LinearLayout
            android:id="@+id/awbLy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_5dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/card_gradient"
            android:padding="@dimen/_5dp"
            app:layout_constraintTop_toBottomOf="@+id/tvApproved">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/card_inside_gradient"
                android:orientation="vertical"
                android:paddingVertical="5dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/_10dp"
                        android:layout_weight="1"
                        android:fontFamily="@font/montserrat_medium"
                        android:text="AWB No."
                        android:textColor="@color/black" />

                    <View
                        android:layout_width="0.5dp"
                        android:layout_height="match_parent"
                        android:background="@color/grey" />

                    <TextView
                        android:paddingVertical="@dimen/_4dp"
                        android:id="@+id/tvAwb"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/_10dp"
                        android:layout_weight="1"
                        android:fontFamily="@font/montserrat_medium"
                        android:text="************"
                        android:textColor="@color/black" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginHorizontal="@dimen/_10dp"
                    android:background="@color/grey" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/_10dp"
                        android:layout_weight="1"
                        android:fontFamily="@font/montserrat_medium"
                        android:text="Delivery Status"
                        android:textColor="@color/black"
                        android:layout_gravity="center_vertical"/>

                    <View
                        android:layout_width="0.5dp"
                        android:layout_height="match_parent"
                        android:background="@color/grey" />

                   <LinearLayout
                       android:layout_weight="1"
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:orientation="vertical">
                       <RadioGroup
                           android:id="@+id/rg"
                           android:layout_width="match_parent"
                           android:layout_height="wrap_content"
                           android:orientation="vertical">
                           <RadioButton
                               android:id="@+id/rbReceived"
                               android:layout_width="match_parent"
                               android:layout_height="wrap_content"
                               android:text="Received"/>
                           <RadioButton
                               android:id="@+id/rbDamaged"
                               android:layout_width="match_parent"
                               android:layout_height="wrap_content"
                               android:text="Received, Damaged"/>
                       </RadioGroup>

                       <TextView
                           android:id="@+id/tvSubmit"
                           android:layout_weight="1"
                           android:layout_marginTop="0dp"
                           android:gravity="center"
                           android:fontFamily="@font/montserrat_semibold"
                           android:text="Submit"
                           android:background="@drawable/button_on_dec"
                           android:textColor="@color/white"
                           android:layout_width="wrap_content"
                           android:layout_height="0dp"
                           android:layout_gravity="center"
                           android:visibility="visible"
                           tools:visibility="visible"
                           />

                       <TextView
                           android:id="@+id/tvCancel"
                           android:layout_weight="1"
                           android:layout_marginTop="0dp"
                           android:gravity="center"
                           android:fontFamily="@font/montserrat_semibold"
                           android:text="Cancel"
                           android:background="@drawable/button_on_dec"
                           android:textColor="@color/white"
                           android:layout_width="wrap_content"
                           android:layout_height="0dp"
                           android:layout_gravity="center"
                           android:visibility="gone"
                           tools:visibility="visible"
                           />

                   </LinearLayout>

                </LinearLayout>


            </LinearLayout>

        </LinearLayout>

        <TextView
            android:layout_weight="1"
            android:id="@+id/tvDownload"
            android:layout_marginTop="@dimen/_55dp"
            android:layout_marginHorizontal="@dimen/_20dp"
            android:gravity="center"
            android:fontFamily="@font/montserrat_semibold"
            android:text="Download ICard"
            android:background="@drawable/button_on_dec"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_gravity="center"
            android:layout_marginBottom="20dp"
            android:paddingHorizontal="@dimen/_20dp"
            android:visibility="gone"
            tools:visibility="visible"
            app:layout_constraintTop_toBottomOf="@+id/awbLy"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:layout_weight="1"
            android:id="@+id/tvHome"
            android:layout_marginTop="100dp"
            android:gravity="center"
            android:fontFamily="@font/montserrat_semibold"
            android:text="Go to Home"
            android:background="@drawable/button_on_dec"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_gravity="center"
            android:visibility="visible"
           tools:visibility="visible"
            app:layout_constraintTop_toBottomOf="@+id/tvDownload"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>

