<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/mainLayout"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/lead_main_bg"
    android:fillViewport="true"
    tools:context=".lead.DeliveryTrackingFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <include layout="@layout/lead_top_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/leadTopLy"/>

        <ImageView
            android:id="@+id/imgMap"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            app:layout_constraintTop_toBottomOf="@+id/leadTopLy"
            android:src="@drawable/googlemap"
            android:scaleType="fitXY"
            android:visibility="gone"/>

        <LinearLayout
            android:id="@+id/deliveryCartLy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@+id/leadTopLy"
            android:background="@drawable/rounded_back"
            android:padding="10dp"
            android:layout_marginHorizontal="@dimen/_15dp"
            android:layout_marginTop="@dimen/_20dp">
            <ImageView
                android:layout_width="@dimen/_35dp"
                android:layout_height="@dimen/_35dp"
                android:src="@drawable/delivery_cart"/>
            <TextView
                android:id="@+id/tvDelivery"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/star"
                android:textSize="11sp"
                android:fontFamily="@font/montserrat_regular"
                android:textColor="@color/black"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="5dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@+id/deliveryCartLy"
            android:background="@drawable/rounded_back"
            android:paddingHorizontal="20dp"
            android:layout_marginTop="@dimen/_20dp"
            android:paddingTop="@dimen/_30dp"
            android:paddingBottom="@dimen/_55dp"
            android:orientation="vertical"
            android:elevation="@dimen/_5dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Delivery Tracking"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:fontFamily="@font/montserrat_semibold"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/_15dp">
                <ImageView
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:src="@drawable/idfc_image"
                    android:padding="2dp"/>
               <LinearLayout
                   android:layout_weight="1"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:orientation="vertical"
                   android:layout_marginStart="10dp">
                   <TextView
                       android:id="@+id/tvBranchName"
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:text="@string/star"
                       android:textColor="@color/black"
                       android:fontFamily="@font/montserrat_semibold"
                       android:textSize="@dimen/_14sp"/>
                   <TextView
                       android:id="@+id/tvIfsc"
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:text="@string/star"
                       android:fontFamily="@font/montserrat_regular"
                       android:textSize="12sp"/>
               </LinearLayout>
                <ImageView
                    android:id="@+id/imgCall"
                    android:layout_width="@dimen/_20dp"
                    android:layout_height="@dimen/_20dp"
                    android:src="@drawable/call"
                    android:layout_gravity="center_vertical"
                    android:visibility="gone"
                    tools:visibility="visible"/>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/light_grey_idfc"
                android:layout_marginTop="@dimen/_15dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/_20dp">
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/message"
                    android:background="@drawable/light_purple_circle"
                    android:padding="7dp"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginStart="20dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Job Type"
                        android:textColor="@color/black"
                        android:textStyle="bold"/>
                    <TextView
                        android:id="@+id/tvJobType"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/star"
                        android:textColor="@color/black"/>
                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_20dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/light_purple_circle"
                    android:padding="7dp"
                    android:src="@drawable/location_idfc" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_15dp"
                    android:orientation="vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Drop Address"
                            android:textColor="@color/black"
                            android:textStyle="bold"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tvDropAddress"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.5"
                            android:text="Charak Sadan 12/5 Charak Sadan 12/5 D.R road near Oxford School, ...."
                            android:textColor="@color/black" />

                        <LinearLayout
                            android:id="@+id/locationLy"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/imgLocation"
                                android:layout_width="@dimen/_40dp"
                                android:layout_height="@dimen/_30dp"
                                android:layout_gravity="center"
                                android:scaleType="fitXY"
                                android:src="@drawable/gmap" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="20dp"
                                android:background="@drawable/button_on_dec"
                                android:fontFamily="@font/montserrat_regular"
                                android:gravity="center"
                                android:padding="3dp"
                                android:text="Direction"
                                android:textColor="@color/white"
                                android:textSize="9sp" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/_20dp">
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/time"
                    android:background="@drawable/light_purple_circle"
                    android:padding="7dp"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginStart="20dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Drop Time"
                        android:textColor="@color/black"
                        android:textStyle="bold"/>
                    <TextView
                        android:id="@+id/tvDropTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/star"
                        android:textColor="@color/black"/>
                </LinearLayout>


            </LinearLayout>

            <TextView
                android:id="@+id/tvClose_sr"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Reached at the Branch"
                android:fontFamily="@font/montserrat_semibold"
                android:gravity="center"
                android:background="@drawable/rounded_green_back"
                android:textColor="@color/white"
                android:paddingVertical="@dimen/_10dp"
                android:layout_marginTop="@dimen/_20dp"/>

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>