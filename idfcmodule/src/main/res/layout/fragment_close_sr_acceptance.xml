<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/mainLayout"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/lead_main_bg"
    tools:context=".lead.CloseSrAcceptanceFragment">

    <include layout="@layout/lead_top_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/leadTopLy"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/leadTopLy"
        app:layout_constraintVertical_bias="0.854"
        tools:layout_editor_absoluteX="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="@dimen/_5dp"
            android:layout_marginHorizontal="@dimen/_10dp"
            android:background="@drawable/rounded_back"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvTimeStart"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_20dp"
                android:gravity="center"
                android:text="Time start..."
                android:visibility="invisible"
                tools:visibility="visible"/>

            <TextView
                android:id="@+id/tvTimer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="00:15:00"
                android:textColor="@color/sky_blue"
                android:textSize="30sp"
                android:textStyle="bold"
                android:visibility="gone"
                tools:visibility="visible"/>

            <ImageView
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:src="@drawable/closing_acceptance" />

            <TextView
                android:id="@+id/tvAcceptance"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10dp"
                android:fontFamily="@font/montserrat_semibold"
                android:gravity="center"
                android:text="SR No.1001365785"
                android:textColor="@color/black"
                android:textSize="@dimen/_18sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Closing acceptance"
                android:textColor="@color/dark_grey_idfc"
                android:textSize="15sp"

                />

            <TextView
                android:id="@+id/tvTimerText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_15dp"
                android:layout_marginTop="@dimen/_10dp"
                android:text="@string/timer_text"
                android:textColor="@color/dark_grey_idfc"
                android:textSize="13sp"
                android:visibility="gone"
                tools:visibility="visible"/>

            <TextView
                android:id="@+id/tvUploadReceipt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/_30dp"
                android:layout_weight="1"
                android:background="@drawable/button_on_dec"
                android:elevation="5dp"
                android:fontFamily="@font/montserrat_semibold"
                android:gravity="center"
                android:paddingHorizontal="50dp"
                android:text="Upload Receipt"
                android:textColor="@color/white"
                android:visibility="invisible"
                tools:visibility="visible"/>

            <TextView
                android:id="@+id/tvEnquiry"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_40dp"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:background="@drawable/rounded_green_back"
                android:elevation="5dp"
                android:fontFamily="@font/montserrat_semibold"
                android:gravity="center"
                android:padding="@dimen/_10dp"
                android:text="Enquiry Now"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/tvCancelReq"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginHorizontal="@dimen/_40dp"
                android:layout_marginTop="@dimen/_10dp"
                android:layout_marginBottom="10dp"
                android:layout_weight="1"
                android:background="@drawable/rounded_red_border2"
                android:elevation="5dp"
                android:fontFamily="@font/montserrat_semibold"
                android:gravity="center"
                android:paddingHorizontal="@dimen/_30dp"
                android:paddingVertical="@dimen/_10dp"
                android:text="Cancel Request"
                android:textColor="@color/red"
                android:visibility="invisible" />

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>