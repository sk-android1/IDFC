<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="@dimen/_5dp"
    android:layout_marginTop="@dimen/_5dp"
    android:background="@drawable/rounded_blue_back"
    android:paddingHorizontal="@dimen/_10dp"
    android:paddingTop="@dimen/_10dp"
    android:paddingBottom="10dp">

    <LinearLayout
        android:id="@+id/layout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:visibility="visible"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.9"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imgDropdown"
                android:layout_width="@dimen/_25dp"
                android:layout_height="@dimen/_25dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/dropdown" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvJobId"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_5dp"
                    android:fontFamily="@font/montserrat_semibold"
                    android:text="Shubham Aggarwal"
                    android:textColor="@color/alpha_black"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tvAddress"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_5dp"
                    android:fontFamily="@font/montserrat_regular"
                    android:textColor="@color/dark_grey_idfc"
                    android:text="Charak Sadan 12/5 D.R road near oxford School, Janak Puri, New Delhi"
                    android:textSize="13sp" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_5dp"
            android:layout_marginEnd="@dimen/_10dp"
            android:layout_weight="1.1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvJobType"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat_regular"
                android:text="Document Delivery"
                android:textAlignment="textEnd"
                android:textColor="@color/alpha_black"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tvDateTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:fontFamily="@font/montserrat_semibold"
                android:text="July 8, 10:25 PM"
                android:textAlignment="textEnd"
                android:textColor="@color/orange"
                android:textSize="11sp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@+id/layout1"
        tools:visibility="visible"
        >

        <LinearLayout
            android:id="@+id/dropUpLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.9"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imgDropup"
                    android:layout_width="@dimen/_25dp"
                    android:layout_height="@dimen/_25dp"
                    android:src="@drawable/dropup" />

                <TextView
                    android:id="@+id/tvJobId2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="5dp"
                    android:fontFamily="@font/montserrat_semibold"
                    android:text="Shubham Aggarwal"
                    android:textColor="@color/alpha_black"
                    android:textSize="14sp" />

            </LinearLayout>

            <TextView
                android:id="@+id/tvDateTime2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5dp"
                android:layout_weight="1.1"
                android:fontFamily="@font/montserrat_semibold"
                android:text="July 8, 10:25 PM"
                android:textAlignment="textEnd"
                android:textColor="@color/orange"
                android:textSize="11sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10dp"
            android:background="@drawable/rounded_light_blue_back"
            android:orientation="vertical"
            android:paddingVertical="@dimen/_20dp"
            android:paddingStart="@dimen/_25dp"
            android:paddingEnd="@dimen/_20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/montserrat_semibold"
                    android:text="Request Type"
                    android:textSize="13sp"
                    android:textColor="@color/dark_grey_idfc"/>

                <TextView
                    android:id="@+id/tvJobType2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/montserrat_regular"
                    android:text="@string/star"
                    android:textAlignment="textEnd"
                    android:textSize="13sp"
                    android:textColor="@color/dark_grey_idfc"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_15dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/montserrat_semibold"
                    android:text="Pickup Address"
                    android:textSize="13sp"
                    android:textColor="@color/dark_grey_idfc"/>

                <TextView
                    android:id="@+id/tvAddress2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/montserrat_regular"
                    android:text="Charak Sadan 12/5 D.R road near oxford School, Janak Puri, New Delhi"
                    android:textAlignment="textEnd"
                    android:textSize="13sp"
                    android:textColor="@color/dark_grey_idfc"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_15dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/montserrat_semibold"
                    android:text="Pickup time slot"
                    android:textSize="13sp"
                    android:textColor="@color/dark_grey_idfc"/>

                <TextView
                    android:id="@+id/tvDateTime3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/montserrat_regular"
                    android:text="22 Aug 2024 2:00 PM"
                    android:textAlignment="textEnd"
                    android:textSize="13sp"
                    android:textColor="@color/dark_grey_idfc"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_15dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/montserrat_semibold"
                    android:text="Nearest Branch"
                    android:textSize="13sp"
                    android:textColor="@color/dark_grey_idfc"/>

                <TextView
                    android:id="@+id/tvBranch"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/montserrat_regular"
                    android:text="****"
                    android:textAlignment="textEnd"
                    android:textSize="13sp"
                    android:textColor="@color/dark_grey_idfc"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_15dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textDocumentType"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/montserrat_semibold"
                    android:text="Number of cheque"
                    android:textSize="13sp"
                    android:textColor="@color/dark_grey_idfc"/>

                <TextView
                    android:id="@+id/tvCount"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/montserrat_regular"
                    android:text="2"
                    android:textAlignment="textEnd"
                    android:textSize="13sp"
                    android:textColor="@color/dark_grey_idfc"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_15dp"
                android:orientation="horizontal"
                android:visibility="gone"
                tools:visibility="visible">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/montserrat_semibold"
                    android:text="Status"
                    android:textSize="13sp"
                    android:textColor="@color/dark_grey_idfc"/>

                <TextView
                    android:id="@+id/tvStatus"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="20dp"
                    android:layout_weight="1"
                    android:background="@color/yellow"
                    android:fontFamily="@font/montserrat_regular"
                    android:padding="5dp"
                    android:text="Pending"
                    android:textAlignment="center"
                    android:textSize="13sp"
                    android:textColor="@color/dark_grey_idfc"/>
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/acceptDeclineLy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_10dp"
            android:layout_marginTop="@dimen/_15dp"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal"
            android:visibility="gone"
            tools:visibility="visible">

            <TextView
                android:id="@+id/tvAccept"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="5dp"
                android:layout_weight="1"
                android:background="@drawable/rounded_green_back"
                android:fontFamily="@font/montserrat_regular"
                android:gravity="center"
                android:paddingVertical="10dp"
                android:text="Accept"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/tvDecline"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_5dp"
                android:layout_weight="1"
                android:background="@drawable/border_edit2"
                android:fontFamily="@font/montserrat_regular"
                android:gravity="center"
                android:paddingVertical="10dp"
                android:text="Decline"
                android:visibility="gone"
                tools:visibility="visible"
                android:textColor="@color/alpha_black"/>
        </LinearLayout>

        <TextView
            android:id="@+id/tvProceed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginHorizontal="5dp"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:background="@drawable/rounded_green_back"
            android:fontFamily="@font/montserrat_regular"
            android:gravity="center"
            android:paddingHorizontal="50dp"
            android:paddingVertical="@dimen/_10dp"
            android:text="Proceed to journey"
            android:textColor="@color/white"
            android:visibility="gone"
            tools:visibility="visible" />

        <TextView
            android:id="@+id/tvCancelReq"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginHorizontal="5dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_weight="1"
            android:background="@drawable/rounded_red2"
            android:fontFamily="@font/montserrat_regular"
            android:gravity="center"
            android:paddingHorizontal="50dp"
            android:paddingVertical="@dimen/_10dp"
            android:text="Cancel Request"
            android:textColor="@color/white"
            android:visibility="gone"
            tools:visibility="visible" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>