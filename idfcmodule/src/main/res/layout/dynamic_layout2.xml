<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rootLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:paddingVertical="10dp"
        android:paddingHorizontal="10dp"
        android:layout_marginHorizontal="@dimen/_5dp"
        android:layout_marginBottom="@dimen/_5dp"
        android:background="@drawable/white_back"
        android:elevation="2dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_45dp"
            android:orientation="horizontal"
            >

            <TextView
                android:id="@+id/tvNumbering"
                android:layout_width="@dimen/_45dp"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/_10dp"
                android:background="@drawable/border_edit2"
                android:fontFamily="@font/montserrat_semibold"
                android:gravity="center"
                android:text="1"
                android:textColor="@color/black"
                android:visibility="visible"
                tools:visibility="visible"/>

            <LinearLayout
                android:id="@+id/uploadImgLy"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginHorizontal="@dimen/_10dp"
                android:background="@drawable/border_edit2">
                <TextView
                    android:id="@+id/tvUploadImage"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:fontFamily="@font/montserrat_semibold"
                    android:gravity="center_vertical"
                    android:paddingStart="@dimen/_15dp"
                    android:text="Upload image 1"
                    android:textColor="@color/black" />
                <TextView
                    android:id="@+id/tvBrowse"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Browse"
                    android:textSize="@dimen/_12sp"
                    android:layout_marginEnd="5dp"
                    android:background="@drawable/rounded_green_back"
                    android:padding="6dp"
                    android:textColor="@color/white"
                    android:layout_gravity="center"
                    android:fontFamily="@font/montserrat_regular"/>
            </LinearLayout>

            <TextView
                android:id="@+id/tvCancel"
                android:layout_width="@dimen/_30dp"
                android:layout_height="@dimen/_30dp"
                android:layout_gravity="center"
                android:layout_marginEnd="@dimen/_10dp"
                android:background="@drawable/rounded_red_border"
                android:fontFamily="@font/montserrat_semibold"
                android:gravity="center"
                android:text="X"
                android:textColor="@color/red"
                android:textSize="@dimen/_16sp"
                android:visibility="gone"
                tools:visibility="visible"/>

        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>