<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/_10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/white_back"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Confirm Currency Details"
        android:gravity="center"
        android:textColor="@color/black"
        android:textSize="@dimen/_16sp"
        android:textStyle="bold"
        android:layout_marginTop="@dimen/_20dp"/>

    <LinearLayout
        android:id="@+id/fiveHun_rupees_noteLy"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginHorizontal="@dimen/_20dp"
        android:layout_marginTop="@dimen/_20dp">
        <TextView
            android:layout_weight="0.9"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="500 Rupee Note     X"
            android:textColor="@color/black"/>
        <TextView
            android:id="@+id/tvFiveHunCount"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="4"
            android:textColor="@color/black"/>
        <TextView
            android:id="@+id/tvFiveHunRupees"
            android:layout_weight="1.1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="\u20b92000"
            android:textColor="@color/sky_blue"
            />

    </LinearLayout>
    <LinearLayout
        android:id="@+id/twoHun_rupees_noteLy"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginHorizontal="@dimen/_20dp"
        android:layout_marginTop="@dimen/_10dp">
        <TextView
            android:layout_weight="0.9"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="200 Rupee Note     X"
            android:textColor="@color/black"/>
        <TextView
            android:id="@+id/tvTwoHunRupeesCount"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="10"
            android:textColor="@color/black"/>
        <TextView
            android:id="@+id/tvTwoHunRupees"
            android:layout_weight="1.1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="\u20b92000"
            android:textColor="@color/sky_blue"
            />

    </LinearLayout>
    <LinearLayout
        android:id="@+id/Hun_rupees_noteLy"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginHorizontal="@dimen/_20dp"
        android:layout_marginTop="@dimen/_10dp">
        <TextView
            android:layout_weight="0.9"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="100 Rupee Note     X"
            android:textColor="@color/black"/>
        <TextView
            android:id="@+id/tvHunCount"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="5"
            android:textColor="@color/black"/>
        <TextView
            android:id="@+id/tvHundred"
            android:layout_weight="1.1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="\u20b9500"
            android:textColor="@color/sky_blue"
           />

    </LinearLayout>
    <LinearLayout
        android:id="@+id/fifty_rupees_note"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginHorizontal="@dimen/_20dp"
        android:layout_marginTop="@dimen/_10dp">
        <TextView
            android:layout_weight="0.9"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="50 Rupee Note     X"
            android:textColor="@color/black"/>
        <TextView
            android:id="@+id/tvFiftyCount"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="2"
            android:textColor="@color/black"/>
        <TextView
            android:id="@+id/tvFifty"
            android:layout_weight="1.1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="\u20b9100"
            android:textColor="@color/sky_blue"
           />

    </LinearLayout>
    <LinearLayout
        android:id="@+id/twenty_rupees_noteLy"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginHorizontal="@dimen/_20dp"
        android:layout_marginTop="@dimen/_10dp">
        <TextView
            android:layout_weight="0.9"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="20 Rupee Note     X"
            android:textColor="@color/black"/>
        <TextView
            android:id="@+id/tvTwentyCount"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="5"
            android:textColor="@color/black"/>
        <TextView
            android:id="@+id/tvTwenty"
            android:layout_weight="1.1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="\u20b9100"
            android:textColor="@color/sky_blue"
            />

    </LinearLayout>
    <LinearLayout
        android:id="@+id/ten_rupees_noteLy"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginHorizontal="@dimen/_20dp"
        android:layout_marginTop="@dimen/_10dp">
        <TextView
            android:layout_weight="0.9"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="10 Rupee Note     X"
            android:textColor="@color/black"/>
        <TextView
            android:id="@+id/tvTenCount"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="20"
            android:textColor="@color/black"/>
        <TextView
            android:id="@+id/tvten"
            android:layout_weight="1.1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="\u20b9200"
            android:textColor="@color/sky_blue"
            />

    </LinearLayout>
    <LinearLayout
        android:id="@+id/five_rupees_noteLy"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginHorizontal="@dimen/_20dp"
        android:layout_marginTop="@dimen/_10dp">
        <TextView
            android:layout_weight="0.9"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="5 Rupee Note     X"
            android:textColor="@color/black"/>
        <TextView
            android:id="@+id/tvFiveCount"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="10"
            android:textColor="@color/black"/>
        <TextView
            android:id="@+id/tvFive"
            android:layout_weight="1.1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="\u20b950"
            android:textColor="@color/sky_blue"
          />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/counterfeitLy"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/light_red"
        android:padding="@dimen/_10dp"
        android:layout_marginVertical="@dimen/_20dp"
        android:layout_marginHorizontal="@dimen/_30dp"
        android:visibility="gone">
        <ImageView
            android:layout_width="17dp"
            android:layout_height="17dp"
            android:src="@drawable/info"
            app:tint="@color/red"
            android:layout_gravity="center"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Is there any suspected or counterfeit note detected?"

            android:layout_marginStart="10dp"
            android:textColor="@color/red"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/counterfeitSubmitLy"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/light_blue"
        android:padding="@dimen/_15dp"
        android:layout_marginVertical="@dimen/_20dp"
        android:layout_marginHorizontal="@dimen/_30dp">
        <ImageView
            android:layout_width="17dp"
            android:layout_height="17dp"
            android:src="@drawable/info"
            app:tint="@color/sky_blue"
            android:layout_gravity="center"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Submit to confirm and proceed."

            android:layout_marginStart="10dp"
            android:textColor="@color/sky_blue"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginHorizontal="@dimen/_20dp">
        <TextView
            android:layout_weight="1"
            android:id="@+id/btnYes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Yes"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:background="@drawable/rounded_blue_back2"
            android:gravity="center"
            android:padding="@dimen/_12dp"
            android:layout_marginHorizontal="5dp"/>
        <TextView
            android:layout_weight="1"
            android:id="@+id/btnNo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="No"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:background="@drawable/rounded_red2"
            android:gravity="center"
            android:padding="@dimen/_12dp"
            android:layout_marginHorizontal="10dp"/>
    </LinearLayout>

</LinearLayout>